@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkTheme"
    Theme="_theme" />
<MudDialogProvider FullWidth="true"
    MaxWidth="MaxWidth.Medium"
    CloseButton="true"
    DisableBackdropClick="false"
    Position="DialogPosition.Center"
    CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Fluent Emoji</MudText>
        <MudSpacer />
        <MudToggleIconButton Toggled="@_isDarkTheme" ToggledChanged=@OnToggledChanged
            Title="Switch to Dark Theme" Icon=@Icons.Material.Outlined.DarkMode Color=@Color.Inherit
            ToggledTitle="Switch to Light Theme" ToggledIcon=@Icons.Material.Filled.WbSunny ToggledColor=@Color.Default />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit"
            Link="https://github.com/microsoft/fluentui-emoji" Target="_blank" />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
